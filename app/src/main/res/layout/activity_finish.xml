<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Finish">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_finish">

    <TextView
        android:id="@+id/txt_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo: Masculino"
        android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <TextView
        android:id="@+id/txt_renda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renda: Até 2 Salários Mínimos"
        android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <TextView
        android:id="@+id/txt_candidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidato: Jair Bolsonaro"
        android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <TextView
        android:id="@+id/txt_rejeita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejeição: Haddad"
        android:textSize="18sp" />

    </LinearLayout>
</ScrollView>